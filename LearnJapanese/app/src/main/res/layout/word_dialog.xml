<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dip"
    android:layout_marginLeft="10dip"
	android:background="@android:color/background_light">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp">

	    <ImageView
	        android:id="@+id/note_button"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
			android:background="@android:drawable/ic_media_play"
	        android:contentDescription="@string/note_desc"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
	        android:visibility="visible" />
	    <Button
			android:id="@+id/bookmark_off_button"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:text="@string/bookmark_off"
			android:layout_alignParentBottom="true"
			android:layout_toRightOf="@+id/bookmark_on_button"
			android:layout_toEndOf="@+id/bookmark_on_button" />
	    <Button
			android:id="@+id/bookmark_on_button"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:text="@string/bookmark_on"
			android:layout_alignTop="@+id/bookmark_off_button"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />
	    <TextView
	        android:id="@+id/word_dialog_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_above="@id/bookmark_on_button"
	        android:padding="5dip"
	        android:textSize="@dimen/large"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true" />
	</RelativeLayout>

    <TextView
        android:id="@+id/word_dialog_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:paddingRight="8dip"
        android:paddingLeft="8dip"/>

    <TextView
        android:id="@+id/word_dialog_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/word_dialog_line1"
        android:paddingBottom="4dip"
        android:paddingRight="8dip"
        android:paddingLeft="8dip"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/word_dialog_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/word_dialog_line2"
        android:paddingBottom="10dip"
        android:paddingLeft="8dip"
        android:textSize="18sp" />

</RelativeLayout>